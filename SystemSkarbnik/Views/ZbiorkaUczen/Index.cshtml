@model IEnumerable<SystemSkarbnik.Models.ZbiorkaUczen>

@{
    ViewData["Title"] = "";
}

<h1>Zbiórki - płatności</h1>

<p>
    <a asp-action="Create">Utwórz nową płatność do zbiórki</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Zbiorka)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Klasa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Uczen)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CzyZaplacil)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.KiedyZaplacil)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Zbiorka.Nazwa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Klasa.Nazwa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Uczen.Imię)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CzyZaplacil)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.KiedyZaplacil)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edytuj</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Detale</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Usuń</a>
            </td>
        </tr>
}
    </tbody>
</table>
